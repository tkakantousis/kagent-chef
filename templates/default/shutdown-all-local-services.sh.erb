#!/usr/bin/env bash

really_stop() 
{
  echo -n "Do you really want to shutdown all the Hops services running on this server? (y/n) "
  read -r ACCEPT
  case $ACCEPT in
   y | Y)
      ;;
   n | N)
      exit 1
      ;;
    *)
      echo ""
      echo "Please enter 'y' or 'n'." 
      really_stop
      ;;
   esac
}

if [ $# -gt 1 ] ; then
  echo "Invalid parameters $*."
  echo "Usage: $0 [-f]"
  exit 1
fi

if [ $# -eq 1 ] ; then
    if [[ ( "$1" != "-h" ) && ( "$1" != "-f" ) ]] ; then
	echo "Invalid parameter: $1."
	echo "Usage: $0 [-f]"
	exit 1
    fi
else 
  really_stop
fi

<%= node[:conda][:base_dir] %>/envs/hops-system/bin/python <%= node[:kagent][:base_dir] %>/agent.py \
	--config <%= node[:kagent][:etc] %>/config.ini --services stop
